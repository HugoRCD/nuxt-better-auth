{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "auth:schema": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/schema/auth.ts -y && eslint . --fix",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./server/database/drizzle.config.ts"
  },
  "dependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/lucide": "^1.2.69",
    "@iconify-json/simple-icons": "^1.2.54",
    "@nuxt/ui-pro": "^3.3.6",
    "@shelve/cli": "^4.1.6",
    "@vueuse/core": "^13.9.0",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "ioredis": "^5.8.1",
    "nuxt": "^3.19.3",
    "pg": "^8.16.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.1",
    "wrangler": "^4.43.0"
  },
  "packageManager": "pnpm@10.18.3"
}
