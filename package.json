{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "auth:schema": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/auth.ts -y && eslint . --fix",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./server/database/drizzle.config.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/lucide": "^1.2.71",
    "@iconify-json/simple-icons": "^1.2.55",
    "@nuxt/ui": "^4.1.0",
    "@nuxthub/core": "npm:@nuxthub/core-nightly@1.0.0-20251102-095244-e559184",
    "@shelve/cli": "^4.1.6",
    "@vueuse/core": "^13.9.0",
    "better-auth": "^1.3.32",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "nuxt": "^4.2.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.2",
    "wrangler": "^4.45.0"
  },
  "packageManager": "pnpm@10.19.0"
}
