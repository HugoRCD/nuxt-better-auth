{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "auth:schema": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/schema/auth.ts -y && eslint . --fix",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./server/database/drizzle.config.ts"
  },
  "dependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/lucide": "^1.2.61",
    "@iconify-json/simple-icons": "^1.2.46",
    "@nuxt/ui-pro": "^3.3.0",
    "@shelve/cli": "^4.1.6",
    "@vueuse/core": "^13.6.0",
    "better-auth": "^1.3.4",
    "drizzle-orm": "^0.44.4",
    "ioredis": "^5.7.0",
    "nuxt": "^3.18.1",
    "pg": "^8.16.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.0.5",
    "wrangler": "^4.28.1"
  },
  "packageManager": "pnpm@10.14.0"
}
